<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowBackground">@drawable/layer_splash</item>
    </style>


    <!--  Activity进入退出动画  -->
    <style name="slide" parent="AppTheme">

        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>

        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>

    </style>

    <!--  Activity进入退出动画  start-->
    <style name="slide_right_in" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
    </style>

    <style name="slide_left_out" parent="AppTheme">
        <item name="android:activityCloseExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="Activity.SlideBottomToTop" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide</item>
    </style>

    <style name="Activity.SlideRightIn" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide_right_in</item>
    </style>

    <style name="Activity.SlideLeftOut" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide_left_out</item>
    </style>
    <!--  Activity进入退出动画 end -->


    <style name="Home_TabTextAppearance">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Home_VideoDurationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/home_shape_duration_bg</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white15</item>
        <item name="android:textSize">13dp</item>
        <item name="typeface">Futura</item>
    </style>

    <style name="Home_TitleActionImage">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:src">@drawable/home_foot_more_small</item>
    </style>

    <style name="Home_TitleActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/home_title_action_magin_right</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="typeface">FZLanD</item>
    </style>

    <style name="Home_SelectionCardIconImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Home_SelectionCardIconText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="typeface">FZLanD</item>
    </style>

</resources>