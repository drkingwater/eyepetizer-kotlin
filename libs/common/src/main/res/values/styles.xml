<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
    </style>

    <style name="Home_TabTextAppearance">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Home_VideoDurationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/home_shape_duration_bg</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white15</item>
        <item name="android:textSize">13dp</item>
        <item name="typeface">Futura</item>
    </style>

    <style name="Home_TitleActionImage">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:src">@drawable/home_foot_more_small</item>
    </style>

    <style name="Home_TitleActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/home_title_action_magin_right</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="typeface">FZLanD</item>
    </style>

    <style name="Home_SelectionCardIconImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Home_SelectionCardIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="typeface">FZLanD</item>
    </style>

</resources>