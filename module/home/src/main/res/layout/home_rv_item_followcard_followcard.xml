<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="me.pxq.common.ui.view.FontCache"/>

        <variable
            name="daily"
            type="me.pxq.common.data.Item" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="fitXY"
            app:cover="@{daily.data.content.data.cover.detail}"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/home_daily_label"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover" />

        <me.pxq.common.ui.view.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/home_shape_duration_bg"
            android:padding="4dp"
            android:textColor="@color/white15"
            android:textSize="13dp"
            app:duration="@{daily.data.content.data.duration}"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:typeface="Futura" />


        <com.google.android.material.internal.BaselineLayout
            android:id="@+id/baseline_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_cover" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/home_followcard_icon_size"
            android:layout_height="@dimen/home_followcard_icon_size"
            android:scaleType="centerCrop"
            app:icon="@{daily.data.header.icon}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baseline_layout" />

        <me.pxq.common.ui.view.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{daily.data.header.title, default = 怀孕了半辈子}"
            android:textColor="@color/black25"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/baseline_layout"
            app:typeface="FZLanD" />

        <me.pxq.common.ui.view.FontTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{daily.data.header.description, default = 创意广告}"
            android:textSize="11dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:typeface="FZLanL" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>