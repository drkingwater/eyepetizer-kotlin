<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="daily"
            type="me.pxq.common.data.Item" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="fitXY"
            app:cover="@{daily.data.content.data.cover.homepage}"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.internal.BaselineLayout
            android:id="@+id/baseline_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_cover" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/home_followcard_icon_size"
            android:layout_height="@dimen/home_followcard_icon_size"
            android:scaleType="centerCrop"
            app:icon="@{daily.data.header.icon}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baseline_layout" />

        <me.pxq.common.ui.view.TypefaceTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{daily.data.header.title, default = 怀孕了半辈子}"
            android:textColor="@color/black35"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/baseline_layout"
            app:typeface="FZLanD" />

        <me.pxq.common.ui.view.TypefaceTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@{daily.data.header.description, default = 创意广告}"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/iv_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:typeface="FZLanL" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>